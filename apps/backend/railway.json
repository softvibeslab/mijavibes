{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "echo 'Skipping build step - using tsx for runtime TypeScript execution'",
    "watchPatterns": ["src/**"]
  },
  "deploy": {
    "startCommand": "node -r tsx/cjs src/index.ts",
    "healthcheckPath": "/health"
  }
}
